<%- include(`../partials/header`)%>
<div class='homepage'>
    <h2>All Facespace members</h2>
    <ul class="homepage__all">
        <% users.forEach(user => { %>
        <li class="homepage__all--user">
          <a href='./users/<%-user._id%>'><img src="<%= user.avatarUrl %>" /></a>
          <% if(user.friends.includes(currentUser._id)){ %>
          <div class='ribbon'><span>Friend</span></div>
          <% } %>
        </li>
        <% }) %>
    </ul>
    <%if(currentUser.name !== undefined){ %>
    <form action="/addall" method="post">
      <button class='profile-page__button'>I 😍 everyone</button>
    </form>
    <form action="/removeall" method="post">
      <button class='profile-page__button'>I 😡 everyone</button>
    </form>
  <% } %>
</div>

<%- include(`../partials/footer`)%>